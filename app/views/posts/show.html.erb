<div id="post_content">
    <h1><%= @post.title %></h1>
    <p><%= @post.content %></p>
    
    <div id="comments">
        <h2><%= @post.comments.count %>  Komentara</h2>
       <%= render @post.comments %>
       
        <h3>Reply to post</h3>
        <%= render "comments/form" %>
    </div>
    <br>
   <hr>
   <br>
        <%= link_to "Izmeni", edit_post_path(@post), class: "button" %>
        <%= link_to "Obrisi", post_path(@post), method: :delete, data: { confirm: "Jesi siguran?" }, class: "button"  %>
        <%= link_to "Vrati se", root_path, class: "button"  %>
  
    
</div>
